@model IEnumerable<SchoolManagementSystem_V1.Models.SuperAdmin>

@{
    ViewData["Title"] = "Super Admin";
}
<div class="View_Body">
<h1>Super Admin</h1>

<p>
    <a asp-action="Create">Add New Admin</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
                       
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SuperAdminId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SuperAdminId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SuperAdminId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>