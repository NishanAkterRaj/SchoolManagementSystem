@model IEnumerable<SchoolManagementSystem_V1.Models.StudentResult>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ObtainedMark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ObtainedMark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade.GradeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.SubjectId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentResultId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentResultId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentResultId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
